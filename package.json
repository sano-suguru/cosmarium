{
  "name": "cosmarium",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "build": "vite build",
    "deploy": "bun run build && wrangler deploy",
    "typecheck": "tsc --noEmit && tsc --noEmit -p worker/tsconfig.json",
    "lint": "biome lint src/ worker/",
    "lint:fix": "biome lint --write src/ worker/",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "knip": "knip",
    "test": "vitest",
    "test:run": "vitest run",
    "bench": "vitest bench",
    "cpd": "jscpd src/",
    "similarity": "similarity-ts --min-lines 7 --threshold 0.92 src/",
    "check:deps": "depcruise --validate .dependency-cruiser.cjs src worker",
    "check": "tsc --noEmit && tsc --noEmit -p worker/tsconfig.json && biome ci . && knip && jscpd src/ && similarity-ts --min-lines 7 --threshold 0.92 src/ && vitest run && bun run check:deps",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx biome check --staged --no-errors-on-unmatched --write && git update-index --again"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@cloudflare/workers-types": "^4.20260301.1",
    "@types/bun": "^1.3.8",
    "dependency-cruiser": "^17.3.8",
    "hono": "^4.12.3",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5",
    "vite": "^7.3.1",
    "vite-plugin-glsl": "~1.5.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.69.0"
  }
}
