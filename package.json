{
  "name": "cosmarium",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "knip": "knip",
    "test": "vitest",
    "test:run": "vitest run",
    "cpd": "jscpd src/",
    "similarity": "similarity-ts --min-lines 7 --threshold 0.92 src/",
    "check:deps": "depcruise --validate .dependency-cruiser.cjs src",
    "check": "tsc --noEmit && biome ci . && knip && jscpd src/ && similarity-ts --min-lines 7 --threshold 0.92 src/ && vitest run && bun run check:deps",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx biome check --staged --no-errors-on-unmatched --write && git update-index --again"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "dependency-cruiser": "^17.3.8",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5",
    "vite": "^7.3.1",
    "vite-plugin-glsl": "~1.5.5",
    "vitest": "^4.0.18"
  },
  "volta": {
    "node": "24.13.1",
    "npm": "10.9.4"
  }
}
