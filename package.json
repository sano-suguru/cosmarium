{
  "name": "cosmicwar",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,css}' '*.{json,html}' '*.config.*'",
    "format:check": "prettier --check 'src/**/*.{ts,css}' '*.{json,html}' '*.config.*'",
    "knip": "knip",
    "check": "tsc --noEmit && eslint src/ && prettier --check 'src/**/*.{ts,css}' '*.{json,html}' '*.config.*' && knip",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{json,html,css}": [
      "prettier --write"
    ],
    "*.config.*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.8",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-glsl": "~1.5.5"
  }
}
