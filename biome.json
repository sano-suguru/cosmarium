{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!**/dist", "!**/*.glsl", "!**/index.original.html"],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "noNestedTernary": "warn",
        "noParameterAssign": "warn",
        "useNumberNamespace": "warn",
        "useCollapsedElseIf": "warn",
        "noYodaExpression": "warn"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noRedeclare": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error", "warn"]
          }
        },
        "noVar": "error",
        "noEvolvingTypes": "error",
        "noEmptyBlockStatements": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noInnerDeclarations": "off"
      },
      "performance": {
        "noDelete": "error",
        "noBarrelFile": "error",
        "noReExportAll": "error"
      },
      "complexity": {
        "noForEach": "warn",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 25
          }
        },
        "noUselessStringConcat": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/shaders/**"],
      "linter": { "enabled": false },
      "formatter": { "enabled": false }
    }
  ]
}
